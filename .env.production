# ==================== RFP SYSTEM - PRODUCTION CONFIGURATION ====================
# Copy this to .env on the production server and fill in values

# ==================== API CONFIGURATION ====================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_WORKERS=4

# ==================== GOOGLE GEMINI LLM ====================
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# ==================== VECTOR DATABASE ====================
# FAISS database path on production server
FAISS_DB_PATH=/opt/rfp-system/data/faiss_db

# ==================== DATABASE (if using PostgreSQL) ====================
# For RFP request/response logging and audit trails
DATABASE_URL=postgresql://rfp_user:secure_password@localhost:5432/rfp_system
SQLALCHEMY_ECHO=false

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/rfp-system/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# ==================== SECURITY ====================
# Add secret key for session/CORS protection
SECRET_KEY=generate_a_strong_random_key_here
ALLOWED_ORIGINS=https://yourcompany.com,https://api.yourcompany.com

# ==================== MONITORING ====================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
ENABLE_METRICS=true
METRICS_PORT=9090

# ==================== LME COMMODITY DATA ====================
# Cache TTL in hours
LME_CACHE_TTL=24

# ==================== PERFORMANCE ====================
REQUEST_TIMEOUT=300
MAX_RETRIES=3
FAISS_BATCH_SIZE=32
